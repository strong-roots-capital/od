{
    "name": "od",
    "version": "4.0.3",
    "description": "Oh dear, another date library",
    "main": "lib/src/index.js",
    "types": "lib/src/index.js",
    "sideEffects": false,
    "scripts": {
        "prepublishOnly": "npm run clean && npm run compile",
        "compile": "tsc --build .",
        "clean": "rimraf --no-glob lib",
        "ava": "ava -s -v",
        "lint": "eslint --ext ts .",
        "test": "nyc ava && npm run size",
        "size": "size-limit",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "push-with-tags": "git push origin master && git push origin --tags",
        "push-and-publish": "npm run push-with-tags && npm publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/strong-roots-capital/od.git"
    },
    "keywords": [
        "date"
    ],
    "author": "Eric Crosson <eric.s.crosson@utexas.edu> (https://github.com/strong-roots-capital)",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/strong-roots-capital/od/issues"
    },
    "homepage": "https://github.com/strong-roots-capital/od",
    "devDependencies": {
        "@size-limit/preset-small-lib": "^4.9.1",
        "@types/node": "^14.11.10",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "ava": "^3.13.0",
        "ava-fast-check": "^3.0.0",
        "codecov": "^3.8.0",
        "eslint": "^7.11.0",
        "fast-check": "^2.5.0",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "size-limit": "^4.6.0",
        "tldrlegal": "^1.0.11",
        "ts-node": "^9.0.0",
        "tslib": "^2.0.3",
        "typescript": "^4.0.3"
    },
    "files": [
        "lib/src"
    ],
    "ava": {
        "files": [
            "!dist/**/*.d.ts",
            "test/**/test-*.ts",
            "spec/**/spec-*.ts"
        ],
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "nyc": {
        "include": [
            "src/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "publishConfig": {
        "access": "public"
    },
    "size-limit": [
        {
            "path": "lib/src/index.js",
            "limit": "1.95 KB"
        }
    ]
}
