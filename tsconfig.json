{
  "include": ["src/**/*", "test/**/*", "perf/**/*", "spec/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "downlevelIteration": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true
  }
}
